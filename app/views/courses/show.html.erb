<div class="row">
    <div class="col-md-4">
        <%= image_tag @course.course_img.url(:course_show), class: "course-show" %>
    </div>
    <div class="col-md-8">
        <h2><%= @course.title %></h2>
        <h3><%= @course.category.name %></h3>
        <h3><%= @course.teacher.name %></h3>
        <h4><%= @course.length %> 小時</h4>
        <p><%= @course.description %></p>
        <iframe title= "Accupass 報名表"  marginwidth="0" marginheight="0" frameborder="0" border="0" scrolling="yes" src=<%= @course.register_url %> width="100%" height="500px" ></iframe>
    </div>
</div>

<%= link_to "Back", root_path %>
<%= link_to "Edit", edit_course_path(@course) %>
<%= link_to "Delete", course_path(@course), method: :delete, data: {confirm: "Are you sure you want to delete this course?"} %>